@model HMS.Entity.Models.Reception

@{
    ViewData["Title"] = "AddAppointment";
}
<form method="post" enctype="multipart/form-data">
    <h1>Patient Appointment</h1>
</form>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAppointment">
            <div class="form-group">
                <label asp-for="AppointmentId" class="control-label"></label>
                <input asp-for="AppointmentId" class="form-control" id="validationTooltip01" value="" required/>
                <span asp-validation-for="AppointmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentTime" class="control-label"></label>
                <input asp-for="AppointmentTime" class="form-control" id="validationTooltip01" value="" required/>

            </div>
            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" id="validationTooltip01" value="" required/>
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientWeight" class="control-label"></label>
                <input asp-for="PatientWeight" class="form-control" id="validationTooltip01" value="" required/>
                <span asp-validation-for="PatientWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorName" class="control-label"></label>
                <input asp-for="DoctorName" class="form-control" id="validationTooltip01" value="" required/>
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
            @if (ViewBag.status == "Ok")
            {
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </form>
    </div>
</div>
